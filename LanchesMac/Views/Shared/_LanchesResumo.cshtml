@model Lanche

<div class="col-md-4 mb-4">
    <div class="card h-100 shadow-sm lanche-card">

        <img src="@Model.ImagemUrl"
             class="card-img-top lanche-img"
             alt="@Model.Nome">

        <div class="card-body d-flex flex-column">

            <h5 class="card-title">
                <a asp-controller="Lanche"
                   asp-action="Details"
                   asp-route-lancheId="@Model.LancheId"
                   class="text-decoration-none text-dark fw-bold">
                    @Model.Nome
                </a>
            </h5>

            <p class="card-text text-muted">
                @Model.DescricaoCurta
            </p>

            <h4 class="text-success mb-3">
                @Model.Preco.ToString("C")
            </h4>

            <!-- BOTÃO PADRÃO -->
            <a class="btn btn-carrinho mt-auto"
               asp-controller="CarrinhoCompra"
               asp-action="AdicionarItemNoCarrinhoCompra"
               asp-route-LancheId="@Model.LancheId">
                🛒 Adicionar ao carrinho
            </a>

        </div>
    </div>
</div>

<style>
    .lanche-img {
        height: 200px;
        object-fit: contain;
        padding: 15px;
        background: #fff;
    }

    .lanche-card {
        border-radius: 14px;
        transition: transform .2s, box-shadow .2s;
    }

        .lanche-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.15);
        }

    /* BOTÃO PADRÃO DO SITE */
    .btn-carrinho {
        background-color: #ff3d00;
        color: white;
        font-size: 1.05rem;
        padding: 12px;
        border-radius: 10px;
        border: none;
        transition: 0.2s;
    }

        .btn-carrinho:hover {
            background-color: #e63600;
            color: white;
            transform: scale(1.02);
        }
</style>


